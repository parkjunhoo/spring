<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.multi.erp.member">
	<select id="login" resultType="member" parameterType="member">
		select m.*, d.deptname,j.menupath, j.job_category 
		from member2 m, dept d,job j	
		where id=#{id} and pass=#{pass}
		      and m.deptno = d.deptno
		      and d.job_category = j.job_id
	</select>
	<select id="idcheck" parameterType="String" resultType="member" >
		select * from member2 where id=#{id}
	</select>
	<insert id="insert" parameterType="member">
		insert into member2	values(#{id},#{pass},#{name},#{ssn},#{birthday},#{marry},
		#{gender},null,null,null,sysdate(),null,#{deptno},null,#{zipcode},#{addr},#{detailaddr},
		#{phonehome},#{phoneco},#{phonecell},#{email},#{profile_photo})
	</insert>
	<select id="treedata">
		select * from member2 where deptno=#{deptno}
	</select>
</mapper>













